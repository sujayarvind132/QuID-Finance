{
  "manifest_version": 3,
  "name": "QuID Finance",
  "description": "NSE India technicals + XGBoost predictions overlay on trading charts (NIFTY/BANKNIFTY/stocks) in real time.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "QuID Finance"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.nseindia.com/*",
    "*://kite.zerodha.com/*",
    "*://*.upstox.com/*",
    "*://query1.finance.yahoo.com/*",
    "*://*.alphavantage.co/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nseindia.com/*",
        "*://kite.zerodha.com/*",
        "*://*.upstox.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [{
    "resources": [
      "content/overlay.html",
      "lib/xgboost.wasm.js",
      "lib/xgboost.wasm.wasm",
      "model/model.json",
      "assets/branding/*"
    ],
    "matches": ["<all_urls>"]
  }]
}
